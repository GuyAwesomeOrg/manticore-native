{
  "name": "paypal-manticore",
  "version": "1.0.0",
  "description": "A runtime to expose Javascript classes, logic and code to native components",
  "main": "build/index.js",
  "bin": "./build/gen/index.js",
  "config": {
    "win": "runtime/win/generated"
  },
  "scripts": {
    "lint": "eslint .",
    "precommit-lint": "eslint . || :",
    "test": "babel-node ./node_modules/.bin/tape test/**/test_*.js",
    "testSome": "babel-node ./node_modules/.bin/tape",
    "build-test-js": "babel-node ./mantify.js ./output/index.pack.js test/js-source/index.js",
    "build-objc-polyfill": "babel-node ./mantify.js runtime/objc/js/polyfill.pack.js runtime/objc/js/polyfill.js",
    "gen-objc-test": "mkdirp output/objc && babel-node -- gen/index.js -q ./runtime/objc/templates ./output/objc test/js-source/*.js",
    "build-android-polyfill": "babel-node ./mantify.js runtime/android/manticore/src/main/res/raw/polyfill_pack.js runtime/android/js/polyfill.js",
    "gen-android-test": "babel-node -- gen/index.js -q ./runtime/android/templates ./runtime/android/manticore/src/test/java/com/paypal/manticore/ test/js-source/*.js",
    "build-win-polyfill": "babel-node ./mantify.js $npm_package_config_win/polyfill.clearscript.pack.js runtime/win/js/polyfill.clearscript.js && babel-node ./mantify.js $npm_package_config_win/polyfill.jint.pack.js runtime/win/js/polyfill.jint.js",
    "gen-win-test": "mkdirp $npm_package_config_win/jint $npm_package_config_win/ClearScript && babel-node -- gen/index.js -q ./runtime/win/templates/jint $npm_package_config_win/jint test/js-source/*.js && babel-node -- gen/index.js -q ./runtime/win/templates/clearscript $npm_package_config_win/ClearScript test/js-source/*.js",
    "build": "babel index.js --out-dir build && babel gen --out-dir build/gen",
    "dev": "git submodule update --init --recursive && npm run build-test-js && npm run build-objc-polyfill && npm run build-android-polyfill && npm run build-win-polyfill && npm run gen-objc-test && npm run gen-android-test && npm run gen-win-test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.paypal.com/RetailSDK-NewGen/paypal-manticore"
  },
  "keywords": [
    "nodejs",
    "mobile",
    "javascript",
    "sdk"
  ],
  "author": "PayPal",
  "license": "Apache-2.0",
  "dependencies": {
    "acorn-es7-plugin": "^1.0.12",
    "ansidiff": "^1.0.0",
    "babel-polyfill": "^6.7.4",
    "babel-regenerator-runtime": "^6.5.0",
    "bluebird": "^3.3.4",
    "docchi": "^0.12.0",
    "dustjs-helpers": "^1.7.3",
    "dustjs-linkedin": "^2.7.2",
    "fs-extra": "^0.26.7",
    "glob": "^7.0.3",
    "lodash": "^4.6.1",
    "node-fetch": "^1.4.1",
    "yaku": "^0.14.1"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-eslint": "^6.0.0",
    "babel-plugin-syntax-async-functions": "^6.5.0",
    "babel-plugin-transform-regenerator": "^6.6.5",
    "babel-preset-es2015": "^6.6.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "eslint": "^2.5.1",
    "eslint-config-airbnb": "^6.2.0",
    "eslint-plugin-react": "^4.2.3",
    "mkdirp": "^0.5.1",
    "pre-commit": "^1.1.2",
    "tape": "^4.5.1",
    "uglifyify": "^3.0.1"
  },
  "pre-commit": [
    "precommit-lint"
  ]
}
